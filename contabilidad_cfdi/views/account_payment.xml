<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_payment_diot_form" model="ir.ui.view">
            <field name="name">account.payment.diot.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="cdfi_invoice.view_account_payment_cfdi_inherit_form" />
            <field name="arch" type="xml">
                   <xpath expr="//notebook/page[@name='info_cdfi']" position="after">
                       <page name="info_diot" string="DIOT">
                          <group cols="4" string="DIOT">
                                <group  string="DIOT">
                                    <field name="diot"/>
                                    <field name="diot_no_acreditable"/>
                                </group>
                            </group>
                       </page>
                   </xpath>
            </field>
        </record>
</odoo>

