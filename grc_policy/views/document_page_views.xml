<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="grc_policy_document_knowledge_action" model="ir.actions.act_window">
	    <field name="name">GRC Policy</field>
	    <field name="res_model">document.page</field>
	    <field name="view_mode">tree,form</field>
    </record>

    <record id="grc_policy_config_action_url" model="ir.actions.act_url">
      <field name="name">redirect_policy_config</field>
	    <field name="url">/web#action=522&amp;model=mailing.mailing&amp;view_type=list&amp;menu_id=396</field>
      <field name="target">self</field>
    </record>

    <record id="grc_policy_document_knowledge_config_action" model="ir.actions.act_window">
	    <field name="name">Policy Config</field>
	    <field name="res_model">document.page</field>
	    <field name="view_mode">tree,form</field>
      <field name="view_ids" eval="[(5, 0, 0),
              (0, 0, {'view_mode': 'tree', 'view_id': ref('document_page.view_wiki_tree')}),
              (0, 0, {'view_mode': 'form', 'view_id': ref('document_page.view_wiki_form')})]"/>

    </record>
    <!-- <record id="document_page.action_page" model="ir.actions.act_window">
      <field name="params" eval="{'menu_id': ref('document_knowledge.menu_document_root')}"/>
    </record> -->

    <record model="ir.ui.view" id="grc_policy_document_page_formview_inh">
      <field name="name">Document Page</field>
      <field name="model">document.page</field>
      <field name="inherit_id" ref="document_page.view_wiki_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='parent_id']" position="attributes">
          <attribute name="options">{'no_create':1, 'no_create_edit': True}</attribute>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="grc_policy_document_page_category_formview_inh">
      <field name="name">Document Page Category</field>
      <field name="model">document.page</field>
      <field name="inherit_id" ref="document_page.view_category_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='approver_gid']" position="attributes">
          <attribute name="options">{'no_create':1, 'no_create_edit': True}</attribute>
          <attribute name="readonly">1</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
