<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="policy_set_groups_other_formview_inh">
      <field name="name">Set Groups Other</field>
      <field name="model">set.groups.user</field>
      <field name="inherit_id" ref="grcbit_setgroups.set_groups_formview"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
          <page string="Other">
            <group>
              <group>
                <field name="check_project"/>
                <field name="check_mailing"/>
              </group>
              <group>
                <field name="check_employee"/>
                <!-- <field name="check_knowledge"/> -->
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.menu" id="project.menu_main_pm">
      <field name="groups_id" eval="[(6,0,[ref('project.group_project_manager')])]"/>
    </record>	
    <record model="ir.ui.menu" id="mass_mailing.mass_mailing_menu_root">
      <field name="groups_id" eval="[(6,0,[ref('mass_mailing.group_mass_mailing_user')])]"/>
    </record>	
    <record model="ir.ui.menu" id="hr.menu_hr_root">
      <field name="groups_id" eval="[(6,0,[ref('hr.group_hr_manager')])]"/>
    </record>	
    <record model="ir.ui.menu" id="document_knowledge.menu_document_root">
      <field name="groups_id" 
        eval="[(6,0,[
            ref('document_page.group_document_manager'), 
            ref('document_page_approval.group_document_approver_user'),
            ref('document_page.group_document_editor'),
            ref('document_knowledge.group_document_user')])]"/>
    </record>	
  </data>
</odoo>
