<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="set_groups_formview">
      <field name="name">Set Groups</field>
      <field name="model">set.groups.user</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="user_id" readonly="1" force_save="1"/>
            </group>
            <notebook name="container_access">
            </notebook>
          </sheet>
          <footer>
            <button type="object" string="SAVE" class="btn btn-primary" name="assign_groups"/>
            <button special="cancel" string="CANCEL"/>
          </footer>
        </form>
      </field>
    </record>
    <record model="ir.ui.view" id="other_set_groups_other_formview_inh">
      <field name="name">Set Groups Other</field>
      <field name="model">set.groups.user</field>
      <field name="inherit_id" ref="grcbit_setgroups.set_groups_formview"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
          <page string="Other">
            <group>
              <group>
                <field name="check_project"/>
                <field name="check_mailing"/>
                <field name="check_discuss"/>
              </group>
              <group>
                <field name="check_employee"/>
                <field name="check_contacts"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.menu" id="project.menu_main_pm">
      <field name="groups_id" eval="[(6,0,[ref('grcbit_setgroups.group_show_project')])]"/>
    </record>	
    <record model="ir.ui.menu" id="mass_mailing.mass_mailing_menu_root">
      <field name="groups_id" eval="[(6,0,[ref('grcbit_setgroups.group_show_mailing')])]"/>
    </record>	
    <record model="ir.ui.menu" id="hr.menu_hr_root">
      <field name="groups_id" eval="[(6,0,[ref('grcbit_setgroups.group_show_employee')])]"/>
    </record>	
    <record model="ir.ui.menu" id="contacts.menu_contacts">
      <field name="groups_id" eval="[(6,0,[ref('grcbit_setgroups.group_show_contacts')])]"/>
    </record>	
    <record model="ir.ui.menu" id="mail.menu_root_discuss">
      <field name="groups_id" eval="[(6,0,[ref('grcbit_setgroups.group_show_discuss')])]"/>
    </record>	

  </data>
</odoo>