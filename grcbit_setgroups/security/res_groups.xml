<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.module.category" id="module_show_menuitems">
      <field name="name">Menuitems</field>
      <field name="description">Show menuitem</field>
      <field name="sequence">30</field>
      <field name="visible" eval="1"/>
    </record>

    <record id="group_show_project" model="res.groups">
      <field name="name">Project</field>
			<field name="category_id" ref="module_show_menuitems"/>
		</record>

    <record id="group_show_mailing" model="res.groups">
      <field name="name">Awareness Campaign</field>
			<field name="category_id" ref="module_show_menuitems"/>
		</record>

    <record id="group_show_employee" model="res.groups">
      <field name="name">Employee</field>
			<field name="category_id" ref="module_show_menuitems"/>
		</record>

    <record id="group_show_discuss" model="res.groups">
      <field name="name">Discuss</field>
			<field name="category_id" ref="module_show_menuitems"/>
		</record>

    <record id="group_show_contacts" model="res.groups">
      <field name="name">Contacts</field>
			<field name="category_id" ref="module_show_menuitems"/>
		</record>

    <record id="base.user_admin" model="res.users">
        <field name="groups_id" 
          eval="[(4,ref('grcbit_setgroups.group_show_project'),ref('grcbit_setgroups.group_show_mailing'),ref('grcbit_setgroups.group_show_employee'),ref('grcbit_setgroups.group_show_discuss'),ref('grcbit_setgroups.group_show_contacts'))]"/>
        
    </record>
  
  </data>
</odoo>