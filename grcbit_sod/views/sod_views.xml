<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!--        SoD Role      -->
    <record id="sod_role_action" model="ir.actions.act_window">
	    <field name="name">SoD Role</field>
	    <field name="res_model">sod.role</field>
	    <field name="view_mode">tree,form,kanban</field>
    </record>
    <record model="ir.ui.view" id="sod_role_treeview">
      <field name="name">SoD Role</field>
      <field name="model">sod.role</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="it_inventory_id"/>
          <field name="user_id" widget="many2one_avatar_user"/>
          <field name="sod_privilege_ids"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="sod_role_formview">
      <field name="name">SoD Role</field>
      <field name="model">sod.role</field>
      <field name="arch" type="xml">
        <form>
        <header>
            <button name="action_approve" type="object" string="APPROVE" states="draft" groups="grcbit_sod.group_sod,grcbit_base.group_grc_admin" class="btn btn-success"/>
            <button name="action_draft" type="object" string="Send to DRAFT" states="approve" groups="grcbit_sod.group_sod,grcbit_base.group_grc_admin" class="btn btn-success"/>
            <field name="state" widget="statusbar" readonly="1"/>
          </header>
          <sheet>
            <group>
              <field name="name" required="1" attrs="{'readonly': [('state','=','approve')]}"/>
              <field name="description" required="1" attrs="{'readonly': [('state','=','approve')]}"/>
              <field name="it_inventory_id" required="1" attrs="{'readonly': [('state','=','approve')]}"/>
              <field name="user_id" required="1" attrs="{'readonly': [('state','=','approve')]}" widget="many2one_avatar_user"/>
            </group>
          <notebook>
              <page string="SoD Privilege">
                <group>
                  <field name="sod_privilege_ids" string=" " attrs="{'readonly': [('state','=','approve')]}">
                    <tree>
                      <field name="name"/>
                      <field name="description"/>
                    </tree>
                    <form>
                      <group>
                        <field name="name"/>
                        <field name="description"/>
                      </group>
                    </form>
                  </field>
                </group>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>
    <record model="ir.ui.view" id="sod_role_kanban">
      <field name="name">SoD Role</field>
      <field name="model">sod.role</field>
      <field name="arch" type="xml">
	      <kanban class="o_kanban_mobile">
          <field name="name"/>
          <field name="description"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name"/>
                  </strong>
                  <div>
                    <t t-esc="record.description.value"/>
		              </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!--        SoD Privilege      -->
    <record id="sod_privilege_action" model="ir.actions.act_window">
	    <field name="name">SoD Privilege</field>
	    <field name="res_model">sod.privilege</field>
	    <field name="view_mode">tree,form,kanban</field>
    </record>
    <record model="ir.ui.view" id="sod_privilege_treeview">
      <field name="name">SoD Privilege</field>
      <field name="model">sod.privilege</field>
      <field name="arch" type="xml">
        <tree>
          <field name="sod_role_id"/>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="sod_privilege_formview">
      <field name="name">SoD Privilege</field>
      <field name="model">sod.privilege</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="is_grc_admin" invisible="1"/>
              <field name="sod_role_id" attrs="{'readonly': [('is_grc_admin','=', False)]}" options="{'no_quick_create': True, 'no_create_edit' : True, 'no_create':True}"/>
              <field name="name" required="1"/>
              <field name="description" required="1"/>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>
    <record model="ir.ui.view" id="sod_privilege_kanban">
      <field name="name">SoD Privilege</field>
      <field name="model">sod.privilege</field>
      <field name="arch" type="xml">
	      <kanban class="o_kanban_mobile">
          <field name="name"/>
          <field name="description"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="name"/>
                  </strong>
                  <div>
                    <t t-esc="record.description.value"/>
		              </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
  </data>
</odoo>