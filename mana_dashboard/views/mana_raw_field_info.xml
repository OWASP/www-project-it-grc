
<odoo>
    <data>
        <record model="ir.ui.view" id="mana_dashboard.raw_field_info_list">
            <field name="name">Mana Raw Field Info list </field>
            <field name="model">mana_dashboard.raw_field_info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="name"/>
                    <field name="measure" string="measure"/>
                    <field name="alias" string="alias"/>
                    <field name="category" string="category"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mana_dashboard.raw_field_info_form">
            <field name="name">Mana Raw Field Info form </field>
            <field name="model">mana_dashboard.raw_field_info</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="form-group row">
                            <label for="name" class="col-sm-2 col-form-label">name</label>
                            <div class="col-sm-10">
                                <field name="name" string="name"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="measure" class="col-sm-2 col-form-label">measure</label>
                            <div class="col-sm-10">
                                <field name="measure" string="measure"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="alias" class="col-sm-2 col-form-label">alias</label>
                            <div class="col-sm-10">
                                <field name="alias" string="alias"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="category" class="col-sm-2 col-form-label">category</label>
                            <div class="col-sm-10">
                                <field name="category" string="category"/>
                            </div>
                        </div>   
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mana_dashboard.raw_field_info_act_window">
            <field name="name">Mana Raw Field Info</field>
            <field name="res_model">mana_dashboard.raw_field_info</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>