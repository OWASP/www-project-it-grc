
<odoo>
    <data>

        <record model="ir.ui.view" id="mana_dashboard.marquee_traits_list">
            <field name="name">Mana Dashboard Marquee Trait list </field>
            <field name="model">mana_dashboard.marquee_traits</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="circular" string="circular"/>
                    <field name="loop" string="loop"/>
                    <field name="direction" string="direction"/>
                    <field name="scrolldelay" string="scrolldelay"/>
                    <field name="scrollamount" string="scrollamount"/>
                    <field name="runshort" string="runshort"/>
                    <field name="hoverstop" string="hoverstop"/>
                    <field name="inverthover" string="inverthover"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="mana_dashboard.marquee_traits_form">
            <field name="name">Mana Dashboard Marquee Trait form </field>
            <field name="model">mana_dashboard.marquee_traits</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <!-- config_id -->
                        <field name="config_id" string="config_id" readonly="1" force_save="1"/>

                        <div class="form-group row">
                            <label for="circular" class="col-sm-3 col-form-label">circular</label>
                            <div class="col-sm-8">
                                <field name="circular" string="circular"/>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="loop" class="col-sm-3 col-form-label">loop</label>
                            <div class="col-sm-8">
                                <field name="loop" string="loop"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="direction" class="col-sm-3 col-form-label">direction</label>
                            <div class="col-sm-8">
                                <field name="direction" string="direction"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="scrolldelay" class="col-sm-3 col-form-label">scrolldelay</label>
                            <div class="col-sm-8">
                                <field name="scrolldelay" string="scrolldelay"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="scrollamount" class="col-sm-3 col-form-label">scrollamount</label>
                            <div class="col-sm-8">
                                <field name="scrollamount" string="scrollamount"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="runshort" class="col-sm-3 col-form-label">runshort</label>
                            <div class="col-sm-8">
                                <field name="runshort" string="runshort"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="hoverstop" class="col-sm-3 col-form-label">hoverstop</label>
                            <div class="col-sm-8">
                                <field name="hoverstop" string="hoverstop"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inverthover" class="col-sm-3 col-form-label">inverthover</label>
                            <div class="col-sm-8">
                                <field name="inverthover" string="inverthover"/>
                            </div>
                        </div>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="mana_dashboard.marquee_traits_act_window">
            <field name="name">Mana Dashboard Marquee Trait</field>
            <field name="res_model">mana_dashboard.marquee_traits</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>