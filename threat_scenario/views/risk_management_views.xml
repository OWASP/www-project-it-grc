<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="threas_risk_factor_formview_inh">
      <field name="name">threats.risk.factor.formview.inh</field>
      <field name="model">risk.factor</field>
      <field name="inherit_id" ref="grcbit_risk_management.risk_factor_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet" position="inside">
          <separator/>
          <notebook>
            <page name="threat_scenarios" string="Threat Scenario">
              <group>
                <group>
                  <field name="taxonomy_threat_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                  <field name="adversary_cap_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                </group>
                <group>
                  <field name="adversary_intent_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                  <field name="adversary_target_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                </group>
              </group>
              <group>
                <group>
                  <field name="range_effect_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                  <field name="adversial_theat_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                </group>
                <group>
                  <field name="non_adversarial_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                  <field name="relevenace_event_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                </group>
              </group>
            </page>
          </notebook>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
