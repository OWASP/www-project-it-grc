<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="xdr_set_groups_formview_inh">
      <field name="name">Set Groups</field>
      <field name="model">set.groups.user</field>
      <field name="inherit_id" ref="grcbit_setgroups.set_groups_formview"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook[@name='container_access']" position="inside">
          <page name="xdr_groups" string="XDR" groups="backend_iframe.group_dashboard_manager">
            <group>
              <group>
                <field name="xdr_admin_check"/>
                <field name="xdr_user_check"/>
              </group>
              <group>
                <field name="xdr_guest_check"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
