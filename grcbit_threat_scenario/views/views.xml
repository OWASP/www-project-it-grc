<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!--  TaxonomyThreatresource  -->
    <record model="ir.ui.view" id="taxonomy_threat_resource_kanbanview">
      <field name="name">taxonomy.threat.resource.kanbanview</field>
      <field name="model">taxonomy.threat.resource</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_mobile">
	  <field name="type_threat_source"/>
          <field name="description"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <div class="oe_kanban_details">
                  <div style="background-color:#5DADE2;">
                    <strong class="o_kanban_record_title">
                      <field name="type_threat_source"/>
                      <field name="characteristics"/>
                    </strong>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    <record model="ir.ui.view" id="taxonomy_threat_resource_treeview">
      <field name="name">taxonomy.threat.resource.treeview</field>
      <field name="model">taxonomy.threat.resource</field>
      <field name="arch" type="xml">
        <tree>
          <field name="type_threat_source"/>
          <field name="description"/>
          <field name="characteristics"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="taxonomy_threat_resource_formview">
      <field name="name">taxonomy.threat.resource.formview</field>
      <field name="model">taxonomy.threat.resource</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="type_threat_source"/>
                <field name="description"/>
                <field name="characteristics"/>
              </group>
              <group></group>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_threat" />
          </div>
        </form>
      </field>
    </record>

