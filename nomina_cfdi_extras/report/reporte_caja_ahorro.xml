<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_landscape_caja_ahorro" model="report.paperformat">
        <field name="name">A4 Landscape Payslip Batch</field>
        <field name="default" eval="True"/>
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>

    <template id="reporte_caja_ahorro_document">
        <t t-call="web.html_container">

            <!--HEADER-->
            <div class="header">
            </div>


            <!--FOOTER-->
            <div class="footer">
            </div>


            <!--CONTENT-->
            <div class="article o_report_layout_standard">

                <div class="page">
                    <div class="oe_structure"/>

                    <div class="row">

                        <!--LOGO-->
                        <div class="col-4">
                            <img t-if="docs.company_id.logo"
                                 t-att-src="'data:image/png;base64,%s' % to_text(docs.company_id.logo)"
                                 style="max-height: 180px;max-width: 180px;"/>
                        </div>
                        <div class="col-4">

                        </div>
                        <!--COMPANY INFO-->
                        <div class="col-4" style="font-size:20px;">
                            <span t-field="docs.company_id.street"/>
                            <span t-field="docs.company_id.street2"/>
                            <br/>
                            <span t-field="docs.company_id.city"/>
                            <span t-field="docs.company_id.state_id.name"/>
                            <span t-field="docs.company_id.zip"/>
                        </div>

                    </div>

                    <br/>
                    <br/>
                    <br/>

                    <div class="row">

                        <div class="col-6" style="padding-left:30px;;font-size:20px;">
                            Empleado:
                            <span t-field="docs.employee_id.name"/>
                            <br/>
                            Importe a retirar:
                            <span t-field="docs.importe"/>
                            <br/>
                            Saldo:
                            <span t-field="docs.saldo"/>
                            <br/>
                        </div>

                        <div class="col-6" style="padding-right:30px;text-align:center;font-size:20px;">
                            Fecha de solicitud:
                            <span t-field="docs.fecha_solicitud"/>
                            <br/>
                            Fecha de aplicación:
                            <span t-field="docs.fecha_aplicacion"/>
                            <br/>
                        </div>

                    </div>

                    <br/>
                    <br/>
                    <br/>

                    <center>
                        <span style="font-size:20px;border-top:1px solid black;">Nombre del empleado</span>
                    </center>


                    <!--PART 2-->
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>


                    <div class="row">

                        <!--LOGO-->
                        <div class="col-4">
                            <img t-if="docs.company_id.logo"
                                 t-att-src="'data:image/png;base64,%s' % to_text(docs.company_id.logo)"
                                 style="max-height: 180px;max-width: 180px;"/>
                        </div>
                        <div class="col-4">

                        </div>
                        <!--COMPANY INFO-->
                        <div class="col-4" style="font-size:20px;">
                            <span t-field="docs.company_id.street"/>
                            <span t-field="docs.company_id.street2"/>
                            <br/>
                            <span t-field="docs.company_id.city"/>
                            <span t-field="docs.company_id.state_id.name"/>
                            <span t-field="docs.company_id.zip"/>
                        </div>

                    </div>

                    <br/>
                    <br/>
                    <br/>

                    <div class="row">

                        <div class="col-6" style="padding-left:30px;;font-size:20px;">
                            Empleado:
                            <span t-field="docs.employee_id.name"/>
                            <br/>
                            Importe a retirar:
                            <span t-field="docs.importe"/>
                            <br/>
                            Saldo:
                            <span t-field="docs.saldo"/>
                            <br/>
                        </div>

                        <div class="col-6" style="padding-right:30px;text-align:center;font-size:20px;">
                            Fecha de solicitud:
                            <span t-field="docs.fecha_solicitud"/>
                            <br/>
                            Fecha de aplicación:
                            <span t-field="docs.fecha_aplicacion"/>
                            <br/>
                        </div>

                    </div>

                    <br/>
                    <br/>
                    <br/>

                    <center>
                        <span style="font-size:20px;border-top:1px solid black;">Nombre del empleado</span>
                    </center>


                </div>

            </div>
            <!--END CONTENT-->
        </t>
    </template>

    <record id="reporte_caja_ahorro" model="ir.actions.report">
        <field name="name">Caja de ahorro</field>
        <field name="model">caja.nomina</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">nomina_cfdi_extras.reporte_caja_ahorro_document</field>
        <field name="report_file">nomina_cfdi_extras.reporte_caja_ahorro_document</field>
        <field name="paperformat_id" ref="nomina_cfdi_extras.paperformat_landscape_caja_ahorro"/>
        <field name="binding_model_id" ref="nomina_cfdi.model_caja_nomina"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
