<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="wizard_total_por_departamento_form_view" model="ir.ui.view">
        <field name="name">Total por departamento Form</field>
        <field name="model">total.por.departamento</field>
        <field name="arch" type="xml">
        <form string="Total por departamento">
            <group>
                <field name="hr_payslip_run_ids" widget="many2many_tags"  required="1" default_focus="1"/>
            </group>
            <footer>
                <button name="print_total_por_departamento_report" string="GENERAR" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancelar" class="btn btn-default" special="cancel" />
            </footer>
        </form>
        </field>
    </record>
    <record id="action_wizard_total_por_departamento" model="ir.actions.act_window">
        <field name="name">Total por departamento</field>
        <field name="res_model">total.por.departamento</field>
        <field name="type">ir.actions.act_window</field>
        <!-- <field name="view_type">form</field> -->
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_total_por_departamento_form_view"/>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_action_wizard_total_por_departamento"
                name="Total por departamento"
                action="action_wizard_total_por_departamento"
                parent="menu_payroll_payslip_reportes" 
                groups="om_hr_payroll.group_hr_payroll_user"
                sequence="22"/>

</odoo>