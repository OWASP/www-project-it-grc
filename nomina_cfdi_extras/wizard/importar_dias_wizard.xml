<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_import_dias_wizard_xls_form" model="ir.ui.view">
            <field name="name">importar.dias.wizard.xls.form</field>
            <field name="model">importar.dias.wizard.xls</field>
            <field name="arch" type="xml">
                <form string="Import Dias XLS">
                	<group>
                		<field name="import_file" required="1" filename="file_name" accept='.xls'/>
                		<field name="contract_id" invisible="1"/>
                		<field name="file_name" invisible="1"/>
                	</group>
                	<footer>
                        <button name="import_xls_file" string="Import" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_highlight" special="cancel" />
                    </footer>
               </form>
            </field>
        </record>
        
    </data>
</odoo>