<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//div[@data-key='hr']/div[1]" position="after">
        		<h2>Retardos</h2>
                <div class="row mt16 o_settings_container">
                	<div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                        	<div class="content-group">
                                <div class="row mt16">
                                  <label for="numoer_de_retardos_x_falta" string="NÃºmero de retardos" class="col-md-5 o_light_label"/>
                                  <span class="col-md-3"><field name="numoer_de_retardos_x_falta"/> falta</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                        	<div class="content-group">
                                <div class="row mt16">
                                  <label for="riesgo_de_trabajo" string="Riesgo de trabajo" class="col-md-4 o_light_label"/>
                                  <span class="col-md-6"><field name="riesgo_de_trabajo" style="width: 100%;"/></span>
                                  <label for="enfermedad_general" string="Enfermedad General" class="col-md-5 o_light_label"/>
                                  <span class="col-md-6"><field name="enfermedad_general" style="width: 100%;"/></span>
                                  <label for="maternidad" string="Maternidad" class="col-md-5 o_light_label"/>
                                  <span class="col-md-6"><field name="maternidad" style="width: 100%;"/></span>

                                  <label for="falta_just_con" string="Falta justificada" class="col-md-4 o_light_label"/>
                                  <span class="col-md-6"><field name="falta_just_con" style="width: 100%;"/></span>
                                  <label for="falta_just_sin" string="Falta justificada sin sueldo" class="col-md-5 o_light_label"/>
                                  <span class="col-md-6"><field name="falta_just_sin" style="width: 100%;"/></span>
                                  <label for="falta_injustificada" string="Falta injustificada" class="col-md-5 o_light_label"/>
                                  <span class="col-md-6"><field name="falta_injustificada" style="width: 100%;"/></span>
                                  <label for="falta_retardo" string="Falta por retardo" class="col-md-4 o_light_label"/>
                                  <span class="col-md-6"><field name="falta_retardo" style="width: 100%;"/></span>
                                  <label for="vacaciones" string="Vacaciones" class="col-md-5 o_light_label"/>
                                  <span class="col-md-6"><field name="vacaciones" style="width: 100%;"/></span>
                                  <label for="festivo_doble" string="Festivo doble" class="col-md-5 o_light_label"/>
                                  <span class="col-md-6"><field name="festivo_doble" style="width: 100%;"/></span>
                                  <label for="festivo_triple" string="Festivo triple" class="col-md-5 o_light_label"/>
                                  <span class="col-md-6"><field name="festivo_triple" style="width: 100%;"/></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> 
          </xpath>
        </field>
    </record>
</odoo>
