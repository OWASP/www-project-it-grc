      <field name="name">Customers Seller</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">kanban,tree,form,activity</field>
      <field name="domain">[('create_uid','=',user.id)]</field>
      <field name="groups_id" eval="[(4, ref('grcbit_seller.group_user_seller')),(4, ref('grcbit_seller.group_user_seller_alt'))]"/>
    </record> -->

  </data>
</odoo>