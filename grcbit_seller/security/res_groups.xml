<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
    <record model="ir.module.category" id="module_grcbit_seller">
      <field name="name">GRC Seller</field>
      <field name="description">GRC Module Base</field>
      <field name="sequence">10</field>
    </record>
    <record id="group_admin_seller" model="res.groups">
			<field name="name">Admin</field>
			<field name="category_id" ref="module_grcbit_seller"/>
		</record>
    <record id="group_reseller_admin" model="res.groups">
			<field name="name">Reseller Admin</field>
			<field name="category_id" ref="module_grcbit_seller"/>
		</record>
		<record id="group_user_seller" model="res.groups">
			<field name="name">Reseller User - 1</field>
			<field name="category_id" ref="module_grcbit_seller"/>
		</record>
		<record id="group_user_seller_alt" model="res.groups">
			<field name="name">Reseller User - 2</field>
			<field name="category_id" ref="module_grcbit_seller"/>
		</record>

    <delete model="ir.rule" id="base.res_partner_rule_private_group"/>
    <delete model="ir.rule" id="base.res_partner_rule_private_employee"/>

		<record id="only_own_clients_reseller_users" model="ir.rule">
      <field name="name">Reseller Users Own Clients</field>
      <field name="model_id" ref="base.model_res_partner"/>
      <field name="domain_force">[('reseller_create','=',user.id)]</field>
      <field name="groups" eval="[(6, 0, [ref('grcbit_seller.group_user_seller'), ref('grcbit_seller.group_user_seller_alt')])]"/>
		</record>
    	
  </data>
</odoo>