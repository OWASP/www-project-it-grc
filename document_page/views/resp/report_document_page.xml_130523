        <field name="name">Imprimir Politica</field>
        <field name="model">document.page</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">document_page.policy_print_template</field>
        <field name="report_file">document_page.policy_print_template</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" ref="model_document_page" />
