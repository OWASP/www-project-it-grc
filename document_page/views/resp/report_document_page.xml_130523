		    </table>

        <p style="page-break-before:always;"> </p>




    </t>

    </div>
    </t>
</template>



    <template id="report_documentpage_doc">
        <t t-call="web.external_layout">
            <div class="page">

                <h1 t-field="doc.name" />
                <div t-raw="doc.content" />


	    		    <table border="1">
			    <thead>
			    <tr height="30">
				    <th width="400">Nombre y puesto de quien elabora</th>
				    <th width="200">Fecha</th>
			    </tr>
		    </thead>
		    <tbody>
			    <tr height="110">
				    <td></td>
				    <td></td>
			    </tr>

		    </tbody>
		    <br />
		    <br />
		    </table>

		    <table border="1">
			    <thead>
			    <tr height="30">
				    <th width="400">Nombre y puesto de quien autoriza</th>
				    <th width="200">Fecha</th>
			    </tr>
		    </thead>
		    <tbody>
			    <tr height="110">
				    <td></td>
				    <td></td>
			    </tr>

		    </tbody>
		    </table>



            </div>
        </t>
    </template>

    <template id="report_documentpage">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="document_page.report_documentpage_doc" />
            </t>
        </t>
    </template>


        <record id="paperformat_grcbit" model="report.paperformat">
       <field name="name">Custom Paper</field>
       <field name="default" eval="True" />
       <field name="format">A4</field>
       <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">5</field>
    <field name="margin_bottom">5</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">15</field>
    <field name="dpi">90</field>
</record>

