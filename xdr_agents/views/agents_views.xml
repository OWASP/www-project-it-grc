<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!--  LIST AGENTS -->
    <record model="ir.ui.view" id="list_agents_treeview">
      <field name="name">List agents</field>
      <field name="model">xdr.list_agents</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="list_agents_formview">
      <field name="name">List agents</field>
      <field name="model">xdr.list_agents</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button type="object" name="list_agents_action_server" string="Get list" class="btn btn-primary"/>
          </header>
          <sheet>
            <group>
              <field name="name" readonly="1"/>
              <field name="description" readonly="1"/>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>

