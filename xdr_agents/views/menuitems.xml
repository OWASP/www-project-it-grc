    </record>

    <record id="mitre_software_action" model="ir.actions.act_window">
      <field name="name">Software</field>
      <field name="res_model">mitre.software</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="mitre_tactic_action" model="ir.actions.act_window">
      <field name="name">Tactic</field>
      <field name="res_model">mitre.tactic</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="mitre_techniques_action" model="ir.actions.act_window">
      <field name="name">Techniques</field>
      <field name="res_model">mitre.techniques</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="MITRE"       id="menu_mitre_main"        parent="backend_iframe.xdr_menu_main_root"                 sequence="10" />
    <menuitem name="Groups"      id="menu_mitre_groups"      parent="menu_mitre_main" action="mitre_groups_action"      sequence="1"/>
    <menuitem name="Metadata"    id="menu_mitre_metadata"    parent="menu_mitre_main" action="mitre_metadata_action"    sequence="2"/>
    <menuitem name="Mitigations" id="menu_mitre_mitigations" parent="menu_mitre_main" action="mitre_mitigations_action" sequence="3"/>
    <menuitem name="References"  id="menu_mitre_reference"   parent="menu_mitre_main" action="mitre_references_action"  sequence="4"/>
    <menuitem name="Software"    id="menu_mitre_software"    parent="menu_mitre_main" action="mitre_software_action"    sequence="5"/>
    <menuitem name="Tactic"      id="menu_mitre_tactic"      parent="menu_mitre_main" action="mitre_tactic_action"      sequence="6"/>
    <menuitem name="Techniques"  id="menu_mitre_techniques"  parent="menu_mitre_main" action="mitre_techniques_action"  sequence="7"/>
