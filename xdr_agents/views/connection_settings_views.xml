<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!--  CONNECTION SETTINGS -->
    <record model="ir.ui.view" id="connection_settings_treeview">
      <field name="name">Connection Settings</field>
      <field name="model">xdr.connection_settings</field>
      <field name="arch" type="xml">
        <tree>
          <field name="xdr_api_host_ip"/>
          <field name="xdr_api_port"/>
          <!-- <field name="xdr_api_password"/> -->
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="connection_settings_formview">
      <field name="name">Connection Settings</field>
      <field name="model">xdr.connection_settings</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="xdr_api_host_ip" required="1"/>
              <field name="xdr_api_port" required="1"/>
              <!-- <field name="xdr_api_password" required="0"/> -->
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>
  </data>
</odoo>