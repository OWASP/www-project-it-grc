<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  
<template id="compliance_print_template">
  <t t-call="web.report_layout">
    <!-- <t t-foreach="doc" t-as="c" > -->
      <t t-call="web.basic_layout">
        <div class="page">
          <div class="header">
            <div class="row">
              <div class="col-4">
                <img src="/web/binary/company_logo"  style="text-align:left; height:45px; width:45px;"/>
              </div>
              <div class="col-8">
                <h6>Reporte de Cumplimiento: <span t-esc="c[0]"/></h6>
              </div>
            </div>
          </div>
	        <h6>
            <span t-esc="c[1]"/>
          </h6>
          <div class="row">
        	  <div class="col-6">
			        <h6>
                <strong>
                  <span t-esc="c[2][0]"/>
                </strong>
              </h6>
            </div>
        	  <div class="col-6">
	            <h6>
                <span t-raw="c[2][1]"/>
              </h6>
            </div>
          </div>
	        <br />
          <table  class="table table-bordered" style="font-size:12px;">
            <thead>
              <tr>
                <th>Requerimiento</th>
                <th>Cumplimiento</th>
                <th>ISO27001</th>
                <th>Politica/Proceso</th>
              </tr>
            </thead>
	          <tbody>
	            <t t-foreach="c_records" t-as="r"> 
                <tr>
                  <td width="25%"><span t-esc="r[0]" />  </td>
                  <td width="25%"><span t-raw="r[1]" />  </td>
                  <td width="25%"><span t-esc="r[2]" />  </td>
                  <td width="25%"><span t-esc="r[3]" />  </td>
                </tr>
              </t>
		        </tbody>
		      </table>
        </div>
      </t>
    <!-- </t> -->
  </t>
</template>

<record id="paperformat_grcbit" model="report.paperformat">
       <field name="name">Custom Paper</field>
       <field name="default" eval="True" />
       <field name="format">A4</field>
       <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">20</field>
    <field name="margin_bottom">5</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">10</field>
    <field name="dpi">90</field>
</record>


    <record id="print_compliance" model="ir.actions.report">
        <field name="name">Reporte Compliance</field>
        <field name="model">compliance.version</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">grcbit.compliance_print_template</field>
        <field name="report_file">grcbit.compliance_print_template</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" ref="model_compliance_version" />
        <field name="paperformat_id" ref="grcbit.paperformat_grcbit" />
    </record>

