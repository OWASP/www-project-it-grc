   <record model="ir.ui.view" id="grcbit.data_classification_view">
   	<field name="name">Data Classification</field>
        <field name="model">data.classification</field>
        <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
        </field>
   </record>
   <record model="ir.ui.view" id="grcbit.it_inventory_view">
        <field name="name">IT Inventory</field>
        <field name="model">it.inventory</field>
        <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="ip"/>
          <field name="url" optional="hide" />
          <field name="responsible"/>
          <field name="environment" optional="hide" />
          <field name="is_cloud"/>
          <field name="cloud_provider" widget="many2many_tags"  optional="hide" />
          <field name="is_internet_exposed"/>
          <field name="users_qty" optional="hide" />
          <field name="os_version"/>
          <field name="db_version"/>
          <field name="it_file"/>
        </tree>
        </field>
   </record>
