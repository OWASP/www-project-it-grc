<odoo>
  <data>
    <record id="grcbit.data_classification_action" model="ir.actions.act_window">
		<field name="name">Data Classification</field>
		<field name="res_model">data.classification</field>
		<field name="view_mode">tree,form</field>
   </record>
    <record id="grcbit.it_inventory_action" model="ir.actions.act_window">
		<field name="name">IT Inventory</field>
		<field name="res_model">it.inventory</field>
		<field name="view_mode">tree,form</field>
   </record>
    <record id="grcbit.data_inventory_action" model="ir.actions.act_window">
		<field name="name">Data Inventory</field>
		<field name="res_model">data.inventory</field>
		<field name="view_mode">tree,form</field>
   </record>

    <record model="ir.ui.view" id="grcbit.data_classification_view">
      <field name="name">Data Classification</field>
      <field name="model">data.classification</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="grcbit.it_inventory_view">
      <field name="name">IT Inventory</field>
      <field name="model">it.inventory</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="ip"/>
          <field name="responsible"/>
          <field name="environment"/>
          <field name="is_cloud"/>
          <field name="os_version"/>
          <field name="db_version"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="grcbit.it_inventory_form">
      <field name="name">IT Inventory</field>
      <field name="model">it.inventory</field>
      <field name="arch" type="xml">
        <form>
		<group>
          <field name="name"/>
          <field name="description"/>
          <field name="ip"/>
          <field name="url"/>
          <field name="responsible"/>
          <field name="environment"/>
  </group>
		<group>
          <field name="is_cloud"/>
          <field name="cloud_provider"/>
          <field name="is_internet_exposed"/>
          <field name="users_qty"/>
          <field name="os_version"/>
          <field name="db_version"/>
  </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="grcbit.data_inventory_view">
      <field name="name">Data Inventory</field>
      <field name="model">data.inventory</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="data_classification_id"/>
          <field name="location"/>
          <field name="owner"/>
          <field name="it_inventory_id"  widget="many2many_tags" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="grcbit.data_inventory_form">
      <field name="name">Data Inventory</field>
      <field name="model">data.inventory</field>
      <field name="arch" type="xml">
        <form>
		<group>
          <field name="name"/>
          <field name="description"/>
          <field name="data_classification_id"/>
  </group>
		<group>
          <field name="location"/>
          <field name="owner"/>
          <field name="it_inventory_id"  widget="many2many_tags"  />
  </group>
        </form>
      </field>
    </record>

    <menuitem name="GRCbit" id="grcbit.menu_root"/>
    <menuitem name="Asset Management" id="grcbit.menu_asset_management" parent="grcbit.menu_root" />
    <menuitem name="Data Classification" id="grcbit.menu_data_classification" parent="grcbit.menu_asset_management" action="grcbit.data_classification_action" />
    <menuitem name="IT Inventory" id="grcbit.menu_it_inventory" parent="grcbit.menu_asset_management" action="grcbit.it_inventory_action" />
    <menuitem name="Data Inventory" id="grcbit.menu_data_inventory" parent="grcbit.menu_asset_management" action="grcbit.data_inventory_action" />



